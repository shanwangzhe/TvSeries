{% extends 'base.html.twig' %}

{% block body %}
   <h1>{{ tv.name }} Episode list</h1>

    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>EpisodeNumber</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        {% for e in episodes %}
            <tr>
                <td><a href="{{ path('_userEpisodeNew', { 'id': e.id }) }}">{{ e.name }}</a></td>
                <td>{{ e.episodeNumber }}</td>
                <td>{{ e.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}